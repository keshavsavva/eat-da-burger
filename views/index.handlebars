<h1>EAT DA BURGER!</h1>
<br>

<div class="row">
    <div class="col-md-6 undevoured">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block}}
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6 devoured">
        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    {{> eatenBurgers/eaten-burger-block}}
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<h2>Add A Burger!</h2>
<form class="create-form">
    <div class="form-group">
        <input type="text" id="burgerInput" name="name">
    </div>

    <button type="submit">Add Burger Order</button>
</form>
